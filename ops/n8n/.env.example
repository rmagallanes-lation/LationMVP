# n8n image tag (pin in production if desired)
N8N_IMAGE=n8nio/n8n:latest

# Public URL configuration
N8N_HOST=n8n.lation.com.mx
N8N_PROTOCOL=https
WEBHOOK_URL=https://n8n.lation.com.mx
N8N_EDITOR_BASE_URL=https://n8n.lation.com.mx

